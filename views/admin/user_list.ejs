<%include ../partials/header%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><a href="/admin">Admin Page</a></h1>
            <!--<p>View our partnered restaurants from the Greater Portland area</p>-->
        </div>
    </header>
    <form role="form" action="/testuser" method="POST">
        <div class="row">
            <div class="form-group">
                <div class="col-lg-12"><input type="submit" value="Create Test User" class="btn btn-primary btn-block btn-lg"></div>
            </div>
        </div>
    </form>
    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">User List</div>
        <!-- Table -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Number of Orders</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
            <% var counter = 1; %>
            <% user.forEach(function(user){ %>
                <tr>
                    <td><%= counter %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.username %></td>
                    <td><%= user.orders.length %></td>
                    <td><%= user.role %>
                        <span class="pull-right">
                            <button class="btn btn-xs btn-warning">Edit</button>
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </span>
                    </td>
                </tr>
                <% counter++ %>
            <% })%>
            </tbody>
        </table>
    </div>
</div>

<%include ../partials/footer%>